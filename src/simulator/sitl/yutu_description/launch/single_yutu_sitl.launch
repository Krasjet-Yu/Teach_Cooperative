<?xml version="1.0"?>
<launch>

  <!-- vehicle pose -->
  <arg name="x" default="0"/>
  <arg name="y" default="0"/>
  <arg name="z" default="0"/>
  <arg name="R" default="0"/>
  <arg name="P" default="0"/>
  <arg name="Y" default="0"/>

  <!-- vehicle model and config -->
  <arg name="vehicle" default="yutu" />
  <arg name="ID" default="0"/>
  <arg name="ID_in_group" default="0"/>
   
  <!-- Load the URDF/Xacro model of our robot -->  
  <param name="robot_description" command="$(find xacro)/xacro '$(find yutu_description)/urdf/xacro/yutu_sim.xacro' ns:=$(arg vehicle)_$(arg ID_in_group)" />
  <!-- publish tf state -->
  <node name="joint_state_publisher" pkg="joint_state_publisher" type="joint_state_publisher" >  
    <!-- <param name="publish_frequency" type="double" value="50.0" /> -->
    <param name="tf_prefix" value="$(arg vehicle)_$(arg ID_in_group)" /> <!-- Distinguish different robots -->
  </node>
	<node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher" respawn="false" output="screen" >
    <!-- <param name="publish_frequency" type="double" value="50.0" /> -->
    <param name="tf_prefix" value="$(arg vehicle)_$(arg ID_in_group)" />
  </node>

  <!-- load robot model in gazebo-->
  <node name="$(arg vehicle)_$(arg ID)_spawn" pkg="gazebo_ros" type="spawn_model" respawn="false" output="screen"
        args="-urdf -model $(arg vehicle)_$(arg ID_in_group) -param robot_description -x $(arg x) -y $(arg y) -z $(arg z) -R $(arg R) -P $(arg P) -Y $(arg Y)"/> 
</launch>
